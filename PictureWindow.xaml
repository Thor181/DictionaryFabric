<Window x:Class="DictionaryFabricApplication.PictureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryFabricApplication"
        mc:Ignorable="d"
        Title="Изображение" Height="450" Width="800">
    <Grid >
        <Image Grid.Row="0" x:Name="ImageBackground" Source="{Binding Image}" Margin="5" ></Image>
    </Grid>
</Window>
